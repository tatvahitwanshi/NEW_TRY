@model DAL.ViewModels.CustomerList
<div class="modal fade" id="customerDetailsModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content token-generate-modal">
            <form method="post"  class="modal-body" id="customerDetailsForm">
                <input type="hidden" asp-for="@Model.Id" />
                <div class="d-flex justify-content-between">
                    <div class="fw-bold fs-5 text-secondary">Customer Details</div>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>   
                </div>
                <div class="row pe-2 mt-2">
                    <div class="col-12">
                        <div class="row">
                            <div class="col-12 form-floating mt-3">
                                <input asp-for="@Model.CustomerName" class="form-control" placeholder="Name" id="customerName" />
                                <label asp-for="@Model.CustomerName">Name*</label>
                                <span asp-validation-for="@Model.CustomerName" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-12 form-floating mt-3">
                                <input asp-for="@Model.PhoneNumber" class="form-control" placeholder="Phone" id="customerPhone"/>
                                <label asp-for="@Model.PhoneNumber">Mobile No.*</label>
                                <span asp-validation-for="@Model.PhoneNumber" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-12 form-floating mt-3">
                                <input asp-for="@Model.CustomerEmail" class="form-control" placeholder="Email" id="customerAddress" />
                                <label asp-for="@Model.CustomerEmail">Email*</label>
                                <span asp-validation-for="@Model.CustomerEmail" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="d-flex justify-content-end mt-3 gap-2">
                    <button type="submit" class="btn btn-primary">Save</button>
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                </div>
            </form>
        </div>
    </div>
</div>

<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
